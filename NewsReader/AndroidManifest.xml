<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qburst.newsreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/news"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.qburst.newsreader.activities.MainNewsFeed"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.qburst.newsreader.activities.ImageReader" >
        </activity>
        <activity android:name="com.qburst.newsreader.activities.JSOnParse" >
        </activity>
        <activity android:name="com.qburst.newsreader.activities.NewsList" >
        </activity>
        <activity android:name="com.qburst.newsreader.activities.NewsData" >
        </activity>
        <activity
            android:name="com.qburst.newsreader.activities.NewsDetail"
            android:label="@string/title_activity_news_detail" >
        </activity>
        <activity
            android:name="com.qburst.newsreader.activities.NewsIntro"
            android:label="@string/title_activity_news_intro" >
        </activity>
        <activity android:name="com.qburst.newsreader.activities.FacebookActivity" >
        </activity>
        <activity android:name="com.qburst.newsreader.activities.SavedPagesList" >
        </activity>
        <activity
            android:name="com.qburst.newsreader.activities.SavedWebPage"
            android:label="@string/title_activity_saved_web_page" >
        </activity>
    </application>

</manifest>